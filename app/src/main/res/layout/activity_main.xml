<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="303dp"
            tools:layout_editor_absoluteX="122dp"
            android:layout_marginTop="80dp">


        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="戻る" tools:layout_editor_absoluteY="176dp" tools:layout_editor_absoluteX="16dp"
                android:layout_weight="1"
                android:id="@+id/backbtn"/>

        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="再生" tools:layout_editor_absoluteY="273dp" tools:layout_editor_absoluteX="232dp"
                android:layout_weight="1"
                android:id="@+id/movebtn"/>

        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="進む" tools:layout_editor_absoluteY="112dp" tools:layout_editor_absoluteX="170dp"
                android:layout_weight="1"
                android:id="@+id/gobtn"/>

    </LinearLayout>

</LinearLayout>